@using TravelTripProje.Models.Classes
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>

<table class="table-bordered">

    <tr>
        <th>ID</th>
        <th>Başlık</th>      
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.ID</td>
    <td>@x.Baslik</td>
    <td><a href="/Admin/BlogSil/@x.ID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Admin/BlogGuncelle/@x.ID" class="btn btn-warning">Güncelle</a></td>
</tr>
    }


</table>
<a href="/Admin/YeniBlog/" class="btn btn-primary">Blog Ekle</a>
